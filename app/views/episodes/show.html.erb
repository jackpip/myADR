<h1><%= @show.name %></h1>
<h3><%= @episode.episode_number %></h3>

<div class="col-xs-6 hidden-print">
  <h3>Add a Cue</h3>
  <%= form_for @cue do |f| %>
    <%= f.hidden_field :episode_id, value: @episode.id %>
    <%= f.label :character %>
    <%= f.select :character, @show.characters.map {|c| c.name} %><br />
    <%= f.label :start_time %>
    <%= f.text_field :start_time, class: 'timestamp' %><br />
    <%= f.label :end_time %>
    <%= f.text_field :end_time, class: 'timestamp' %><br />
    <%= f.label :dialogue %>
    <%= f.text_area :dialogue %><br />
    <%= f.label :notes %>
    <%= f.text_area :notes %><br />
    <%= f.label :private_notes %>
    <%= f.text_area :private_notes %><br />
    <%= f.label :omit %>
    <%= f.check_box :omit %><br />
    <%= f.submit %>
  <% end %>
</div>

<div class="col-xs-6 hidden-print">
  <h3>Add a Character</h3>
  <%= form_for [@episode, @character] do |f| %>
    <%= f.hidden_field :episode_id, value: @episode.id %>
    <%= f.label :name %>
    <%= f.text_field :name %><br />
    <%= f.label :actor %>
    <%= f.text_field :actor %><br />
    <%= f.submit %>
  <% end %>

  <% @show.characters.each do |character| %>
    <p>
      <%= link_to character.name, episode_character_path(@episode, character) %>
      <%= character.name %>
      <%= character.actor %>
    </p>
  <% end %>
  <%= link_to "All Characters", episode_characters_path(@episode) %>
</div>

<br class="clear"/>
<br />

<div class="col-xs-2">
  Character
</div>
<div class="col-xs-2">
  Start/End
</div>
<div class="col-xs-4">
  Dialogue
</div>
<div class="col-xs-2">
  Notes
</div>
<div class="col-xs-2">
  Omit
</div>

<br class="clear"/>
<hr class="double"/>

<% @cues.each do |cue| %>
  <div class="col-xs-2">
    <%= cue.character.name %>
  </div>
  <div class="col-xs-2">
    <p><%= cue.start_time %></p>
    <p><%= cue.end_time %></p>
  </div>
  <div class="col-xs-4">
    "<%= cue.dialogue %>"
  </div>
  <div class="col-xs-2">
    <p><%= cue.notes %></p>
    <p><%= cue.private_notes %></p>
  </div>
  <div class="col-xs-2">
    <% if cue.omit %>
      <input type="checkbox" checked="true">
    <% else %>
      <input type="checkbox">
    <% end %>
  </div>
  <br class="clear"/>
  <hr class="single"/>
<% end %>
