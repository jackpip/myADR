<div class="title text-center">
  <h3>Series: <%= @show.name %></h3>
  <h3>Episode: <%= @episode.episode_number %></h3>
</div>

<div class="col-xs-2 hidden-print">
  <%= link_to "<- Back to edit", episode_path(@episode) %>
</div>

<div class="hidden-print text-right col-xs-3 col-xs-offset-8">
  <input type="button" class="btn btn-success" value="Print Sheet" onClick="window.print()">
</div>

<br /><br /><br />

<div class="col-xs-10 col-xs-offset-1">
  <div class="col-xs-4">
    Character
  </div>
  <div class="col-xs-4">
    Actor
  </div>
  <div class="col-xs-2">
    Abbr.
  </div>
  <div class="col-xs-2">
    # of Lines
  </div>
  <br class="clear"/>
  <hr class="double"/>
  <% @show.characters.each do |character| %>
    <div class="col-xs-4">
      <%= character.name %>
    </div>
    <div class="col-xs-4">
      <%= character.actor %>
    </div>
    <div class="col-xs-2">
      <%= character.abbr.upcase %>
    </div>
    <div class="col-xs-2">
      <%= character.cues.where(episode: @episode, omit: [false,nil]).count %>
    </div>
    <br class="clear"/>
    <hr class="single"/>
  <% end %>
    <div class="col-xs-10">
      <b>All Characters</b>
    </div>
    <div class="col-xs-2">
      <b><%= @episode.cues.where(omit: [false,nil]).count %></b>
    </div>
    <br class="clear"/>
    <hr class="single"/>
</div>
